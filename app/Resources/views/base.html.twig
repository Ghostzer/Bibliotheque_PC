<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Mediathèque de Pleyber Christ{% endblock %}</title>
        <link rel="stylesheet" type="text/css" href="../css/style.css">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="header">

            <ul class="topnav" id="navMenu">
                <li><a href="/">Accueil</a></li>
                <li><a href="evenements">Evenements</a></li>
                <li class="icon">
                    <a href="javascript:void(0);" onclick="functionMenu()">&#9776;</a>
                </li>
                {% if is_granted("ROLE_USER") %}
                    <li style="float:right"><a href="{{ path('fos_user_security_logout') }}"><span></span>Se déconnecter</a></li>
                            {% else %}
                    <li style="float:right"><a href="#" id="myBtn"><span></span>Se connecter<span></span></a></li>
                            {% endif %}
            </ul>
            <ul class="topnav" id="navCompte">
                {% if is_granted("ROLE_USER") %}
                    <li><a href="/profile">Mon profil</a></li>
                    <li><a href="mes-reservations">Mes réservations</a></li>
                    <li><a href="mes-emprunts">Mes emprunts en cours</a></li>
                    <li class="icon">
                        <a href="javascript:void(0);" onclick="functionCompte()">&#9921;</a>
                    </li>{% else %}
                {% endif %}
                {% if is_granted("ROLE_ADMIN") %}
                    <li><a href="liste-reservations">Liste des réservations</a></li>
                    <li><a href="liste-emprunts">Liste emprunts</a></li>
                    {% else %}
                    {% endif %}
            </ul>
        </ul>
    </div>

    <div id="content">
        <div id="main">
        {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}
</div>
</div>
<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <p><form class="form-inline text-right" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <label for="username"><input type="text" class="form-control" id="username" name="_username" placeholder="Utilisateur" required="required" size='10'></label>
            <label for="password"><input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe" required="required" size='10'></label>
            <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" value="on" hidden></label>
            <button type="submit" id="_submit" name="_submit"><span></span>Ok</button>
        </form></p>


    </div>

</div>

<script>

    var modal = document.getElementById('myModal');

    var btn = document.getElementById("myBtn");
    
    var span = document.getElementsByClassName("close")[0];

    btn.onclick = function () {
        modal.style.display = "block";
    };

    span.onclick = function () {
        modal.style.display = "none";
    };

    window.onclick = function (event) {
        if (event.target === modal) {
            modal.style.display = "none";
        }
    };
</script>

<script>
    function functionMenu() {
        var x = document.getElementById("navMenu");
        if (x.className === "topnav") {
            x.className += " responsive";
        } else {
            x.className = "topnav";
        }
    }
</script>
<script>
    function functionCompte() {
        var x = document.getElementById("navCompte");
        if (x.className === "topnav") {
            x.className += " responsive";
        } else {
            x.className = "topnav";
        }
    }
</script>
</body>
</html>
