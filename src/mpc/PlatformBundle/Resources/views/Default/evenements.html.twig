{% extends "base.html.twig" %}
{% block body %}

<form action=""> 
<select name="event" onchange="voirEvent(this.value)">
<option value="">Selectionnez un evenement</option>
<option value="1">Journ√©e porte ouverte</option>
<option value="2">Comics</option>
</select>
</form>
<br>

<div id="txtHint">Selectionnez un event - {{ dump(objets) }}</div>



<script>
function voirEvent(str) {
  var xhttp;    

  xhttp = new XMLHttpRequest();
  xhttp.onreadystatechange = function() {
    if (this.readyState == 4 && this.status == 200) {
      document.getElementById("txtHint").innerHTML = this.responseText;
    }
  };
  xhttp.open("GET", "evenements?id="+str, true);
  xhttp.send();
}
</script>
    
{% endblock %}